<div style="width:30vw;  text-align: center; padding-top: 10vh; margin: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);"" >
  <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="tab-login" data-mdb-toggle="pill" href="/session/new" role="tab"
      aria-controls="pills-login" aria-selected="true">Login</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="tab-register" data-mdb-toggle="pill" href="/users/new" role="tab"
      aria-controls="pills-register" aria-selected="false">Sign Up</a>
    </li>
  </ul>
  <% if @user.errors.any?%>
    <p><%= @user.errors.full_messages.join(', ')%></p>
  <%end%>
  <%= form_with model: @user do |f|%>
    <div class="form-outline mb-4">
      <%= f.label :first_name, class: "form-label"%>
      <%= f.text_field :first_name, class: "form-control", style: "text-align: center;"%>
    </div>
    <div class="form-outline mb-4">
      <%= f.label :last_name, class: "form-label"%>
      <%= f.text_field :last_name, class: "form-control", style: "text-align: center;"%>
    </div>
    <div class="form-outline mb-4">
      <%= f.label :email, class: "form-label"%>
      <%= f.text_field :email, placeholder: "email@example.ca", class: "form-control", style: "text-align: center;"%>
    </div>
    <div class="form-outline mb-4">
      <%= f.label :password, class: "form-label"%>
      <%= f.password_field :password, placeholder: "Enter password", class: "form-control", style: "text-align: center;"%>
    </div>
    <div class="form-outline mb-4">
      <%= f.label :password_confirmation, class: "form-label"%>
      <%= f.password_field :password_confirmation, placeholder: "Re-Enter password", class: "form-control", style: "text-align: center;"%>
    </div>
    <%= f.submit "Sign Up",  class: "btn btn-primary btn-block mb-3", style: "width: 20%" %>
  <%end%>
</div>
